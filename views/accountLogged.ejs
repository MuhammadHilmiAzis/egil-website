          } else {
            alert(json.message)
              swal({
                  title: `${json.message}!`,
                  text: `status ${json.status}`,
                  icon: "error",
                  button: "OK",
                })
          }
          } catch (error) {
              console.log(error)
          }   
      })
    </script>
