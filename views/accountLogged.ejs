    <!-- JS for Toggle menu -->
    <script>
      var MenuItems = document.getElementById("MenuItems");

      MenuItems.style.maxHeight = "0px";

      function menutoggle() {
        if (MenuItems.style.maxHeight == "0px") {
          MenuItems.style.maxHeight = "200px";
        } 
        else 
        {
          MenuItems.style.maxHeight = "0px";
        }
      }
    </script>
    <!-- 
js for toggle form -->
    <script>
      
      var LoginForm = document.getElementById("LoginForm");
      var RegForm = document.getElementById("RegForm");
      var indicator = document.getElementById("indicator");

      function register() {
        RegForm.style.transform = "translateX(0px)";
        LoginForm.style.transform = "translateX(0px)";
        indicator.style.transform = "translateX(100px)";
      }

      function login() {
        RegForm.style.transform = "translateX(300px)";
        LoginForm.style.transform = "translateX(300px)";
        indicator.style.transform = "translateX(0px)";
      }

      
      RegForm.addEventListener("submit", async(e)=>{
        const urll = 'http://localhost:3000/register'
        e.preventDefault()
        const formData = new FormData(RegForm)
        const formDataSerialized = Object.fromEntries(formData)
        const jsonObject = {
          ...formDataSerialized,
          sendToSelf: formDataSerialized.sendToSelf ? true : false,
        }
        console.log(jsonObject)
        try {
          const response = await fetch(urll, {
            method: "POST",
            body: JSON.stringify(jsonObject),
            headers: {
              "Content-Type": "application/json",
            }
          })
          const json = await response.json()
          console.log(jsonObject)
          if (json.status == 200) {
            alert("succes")
            window.location.href="http://localhost:3000/"

           // swal({
             //     title: "Login Successfully!",
               //   text: "Click ok to continue!",
                 // icon: "success",
                  //button: "OK",
                //}).then(function() {
                  //window.location.href="http://localhost:3000/"
                //})
          } else {
            alert(json.message)
              swal({
                  title: `${json.message}!`,
                  text: `status ${json.status}`,
                  icon: "error",
                  button: "OK",
                })
          }
          } catch (error) {
              console.log(error)
          }   
      })

      LoginForm.addEventListener("submit", async(e)=>{
        const url = 'http://localhost:3000/login' 

        e.preventDefault()
        const DataForm = new FormData(LoginForm)
        const formDataSerialized = Object.fromEntries(DataForm)
        const jsonObject = {
          ...formDataSerialized,
          sendToSelf: formDataSerialized.sendToSelf ? true : false,
        }
        console.log(jsonObject)
        try {
          const response = await fetch(url, {
            method: "POST",
            body: JSON.stringify(jsonObject),
            headers: {
              "Content-Type": "application/json",
            }
          })
          const json = await response.json()
          console.log(json)
          if (json.status == 200) {
            alert("Login Succes")
            window.location.href="http://localhost:3000/main"

